@inject Eljur.Context.dbContext _db
@model Eljur.Context.Tables.StudentVisit
@{
    ViewData["Title"] = "EditVisitView";
}
<br />
<h2 class="text-muted text-center font-weight-light" style="margin-top:0;">Редактировать посещение студента [@Model.Student.FIO]</h2>
<br />
<br />
<hr />
<form asp-controller="Visit" asp-action="EditStudentVisitView" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <input name="subjectId" value="@Model.GroupVisit.Subject.Id" type="hidden" />
    <input name="groupId" value="@Model.GroupVisit.Group.Id" type="hidden" />
    <div style="margin:0 auto; width:300px;">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label>Тип занятия</label>
                    <select class="form-control" asp-for="@Model.TypeVisit" asp-items="@Html.GetEnumSelectList(typeof(Eljur.Context.Tables.TypeVisitEnum))"></select>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <button class="btn btn-primary" style="width:100%">Обновить</button>
        </div>
    </div>
</form>
