@inject Eljur.Context.dbContext _db
@model Eljur.Context.Tables.Theme
@{
    ViewData["Title"] = "Темы";
}
<br />
<h2 class="text-muted text-center font-weight-light" style="margin-top:0;">Редактировать тему</h2>
<br />
<br />
<form asp-action="EditTheme" asp-controller="Settings" method="post">
    <div class="row">
        <input asp-for="@Model.Id" type="hidden" />

        <div class="form-group col-sm-6">
            <label>Название</label>
            <input type="text" asp-for="@Model.Name" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-sm-6">
            <label>Предмет</label>
            <select class="form-control" asp-for="@Model.Subject.Id" asp-items="@(new SelectList(_db.Subject,"Id","Name"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            <label>Тип занятия</label>
            <select class="form-control" asp-for="@Model.Type" asp-items="@Html.GetEnumSelectList(typeof(Eljur.Context.Tables.TypeSubjectEnum))"></select>
        </div>
        <div class="form-group col-sm-6">
            <label>Выделено часов</label>
            <input class="form-control" type="number" min="0.1" step="0.1" placeholder="@Model.AllowedHours" asp-for="@Model.AllowedHours" name="allowedHours"/>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary" style="width:100%;">Обновить</button>
        </div>
    </div>
</form>